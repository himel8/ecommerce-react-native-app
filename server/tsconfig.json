{
  "compilerOptions": {
    "target": "ES6", // Set ECMAScript target version
    "module": "commonjs", // CommonJS module system (for Node.js)
    "moduleResolution": "node", // Use Node.js style module resolution
    "esModuleInterop": true, // Enable importing of non-ESM modules (like `require`)
    "resolveJsonModule": true, // Allow importing of JSON files
    "strict": true, // Enable strict mode for type safety
    "noImplicitAny": true, // Prevent 'any' type usage
    "skipLibCheck": true, // Skip library checking for faster compilation
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in filenames
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./src", // Root directory of your TypeScript files
    "baseUrl": "./", // Base URL for module resolution
    "paths": {
      // Optional: Configure module path aliases
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "src/**/*" // Include all TypeScript files in the 'src' directory
  ],
  "exclude": [
    "node_modules", // Exclude node_modules from compilation
    "dist" // Exclude compiled output folder
  ]
}
